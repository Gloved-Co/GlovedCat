{
  "name": "glovedcat",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "main": "build/main.js",
  "scripts": {
    "build": "tsc",
    "build:full": "npm run prettier && npm run build",
    "dev": "tsx src/main.ts",
    "start": "node build/main.js",
    "build:start": "npm run build:full && npm run start",
    "watch": "nodemon --exec npm run dev --watch src --ext ts",
    "prettier": "npx prettier  -w ./src"
  },
  "prettier": {
    "printWidth": 125,
    "semi": false,
    "singleQuote": false,
    "tabWidth": 2,
    "bracketSpacing": true,
    "experimentalTernaries": true,
    "arrowParens": "always",
    "objectWrap": "preserve",
    "bracketSameLine": false,
    "htmlWhitespaceSensitivity": "strict",
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  },
  "dependencies": {
    "@discordx/importer": "^1.3.3",
    "@discordx/pagination": "^4.4.0",
    "discord.js": "^14.22.1",
    "discordx": "^11.13.2",
    "dotenv": "^17.2.3",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^24.4.0",
    "eslint": "^9.39.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.50.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  }
}